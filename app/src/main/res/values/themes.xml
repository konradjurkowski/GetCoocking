<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.GetCookingApp" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary100</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/animate_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_fade_exit</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary100</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.GetCookingApp</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
</resources>